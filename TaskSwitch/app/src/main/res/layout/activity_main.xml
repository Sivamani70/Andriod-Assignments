<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switchOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/mobile_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/bluetooth"
        app:layout_constraintEnd_toEndOf="@+id/switchOne"
        app:layout_constraintStart_toStartOf="@+id/switchOne"
        app:layout_constraintTop_toBottomOf="@+id/switchOne" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/materialSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/material_component_switch"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="@+id/switchOne"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/switchOne"
        app:layout_constraintTop_toBottomOf="@+id/switchOne" />
</androidx.constraintlayout.widget.ConstraintLayout>